<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EDSN Admin", "Index", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Events", "EventList", "Admin")</li>
                    <li>@Html.ActionLink("Widget Creator", "WidgetCreator", "Admin")</li>
                    @*<li>@Html.ActionLink("Event Details", "EventDetails", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="adminPanel" class="col-xs-12">
        <div class="admin-sidebar col-xs-4">
            <div class="col-xs-12 text-center">
                <br />
                <br />
            </div>
            <div class="btn-group-vertical col-xs-12" role="group">
                <ul class="admin-sidebar">
                    <!-- Foreach Loop Here-->
                    <li>
                        <a class="admin-sidebar btn btn-primary">Submit Event</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-xs-8">

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="../../Scripts/moment.min.js" language="javascript" type="text/javascript"></script>
    <script src="../../Scripts/fullcalendar.js" language="javascript" type="text/javascript"></script>
    <script src="../../Scripts/site.js" language="javascript" type="text/javascript"></script>
</body>
</html>
